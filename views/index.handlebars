<div class="container">
<div class="row">


<div class="col-6">
    <h4>Available Burgers to Devour</h4>
    <ul class="nondevouredList">
      {{#each burgers}}
      {{#unless devoured}}
        <li>{{burger_name}}
        <button class="devourButton" data-id="{{id}}">Devour it!</button></li>
        {{/unless}}
      {{/each}}
    </ul>
</div>

<div class="col-6"> 
    <h4>Devoured Burgers</h4>
    <ul class="devouredList">
      {{#each burgers}}
      {{#if devoured}}
        <li>{{burger_name}}
        <button class="trashButton" data-id="{{id}}">Trash It.</button></li>
        
        {{/if}}
      {{/each}}
    </ul>
</div>


</div>
</div>


